{
	"compilerOptions": {
		"incremental": true,
		"target": "es2019",
		"module": "commonjs",
		"sourceMap": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./config",
		"declaration": true
	},
	"include": [
		"./src"
	]
}
