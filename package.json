    "homepage": "https://github.com/curucurudev/lint-config-curucuru",
    "version": "0.1.12",
    "files": [
        ".eslintrc.js",
        ".prettierrc.js",
        ".stylelintrc.js",
        "tsconfig.json"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:curucurudev/lint-config-curucuru.git"
    },
    "author": "curucurudev",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
